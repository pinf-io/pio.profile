#!/bin/bash
# Source https://github.com/bash-origin/bash.origin
if [ -z "${BO_LOADED}" ]; then
		. "$HOME/.bash.origin"
fi
function init {
		eval BO_SELF_BASH_SOURCE="$BO_READ_SELF_BASH_SOURCE"
		BO_deriveSelfDir ___TMP___ "$BO_SELF_BASH_SOURCE"
		local __BO_DIR__="$___TMP___"


		OUR_BASE_DIR="${__BO_DIR__}"


		function runWithArgs {
				BO_run_node "${OUR_BASE_DIR}/pio-profile-decrypt.js" $@
		}

		function sourceWithArgs {
				eval $(BO_run_node "${OUR_BASE_DIR}/pio-profile-decrypt.js" --format "source/env" $@)
		}


    if [ -z "${BO_IS_SOURCING}" ]; then
	    	# If not sourcing. i.e. executing script directly.
	    	runWithArgs $@
    fi

}
init $@
